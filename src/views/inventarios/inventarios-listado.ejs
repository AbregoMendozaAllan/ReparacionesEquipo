<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Inventarios</title>
</head>
<body>
    <h1>Listado de Inventarios</h1>
    <table>
        <thead>
            <tr>
                <th>ID Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Fecha de Ingreso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% inventarios.forEach(inventario => { %>
                <tr>
                    <td><%= inventario.id_producto %></td>
                    <td><%= inventario.cantidad %></td>
                    <td><%= inventario.precio_unitario %></td>
                    <td><%= inventario.fecha_ingreso %></td>
                    <td>
                        <a href="/inventarios/edit/<%= inventario.id_inventario %>">Editar</a>
                        <a href="/inventarios/delete/<%= inventario.id_inventario %>">Eliminar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/inventarios/create">Crear nuevo producto en inventario</a>
</body>
</html>
