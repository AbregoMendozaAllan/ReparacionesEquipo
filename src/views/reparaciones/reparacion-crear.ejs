<!DOCTYPE html>
<html lang="es">
<head>
    <title>Crear Reparación</title>
</head>
<body>
    <h2>Crear Reparación</h2>

    <form action="/crear-reparacion" method="POST">
        <label for="id_equipo">Equipo:</label>
        <select name="id_equipo" required>
            <% equipos.forEach(equipo => { %>
                <option value="<%= equipo.id_equipo %>"><%= equipo.nombre %></option>
            <% }) %>
        </select>

        <label for="id_solicitud">Solicitud:</label>
        <select name="id_solicitud" required>
            <% solicitudes.forEach(solicitud => { %>
                <option value="<%= solicitud.id_solicitud %>"><%= solicitud.descripcion %></option>
            <% }) %>
        </select>

        <label for="id_tecnico_asignado">Técnico:</label>
        <select name="id_tecnico_asignado" required>
            <% tecnicos.forEach(tecnico => { %>
                <option value="<%= tecnico.id_usuario %>"><%= tecnico.nombre %></option>
            <% }) %>
        </select>

        <button type="submit">Crear Reparación</button>
    </form>

    <a href="/lista-reparaciones">Volver a la lista de reparaciones</a>
</body>
</html>
