<!DOCTYPE html>
<html lang="es">
<head>
    <title>Lista de Reparaciones</title>
    <link rel="stylesheet" href="/static/styles/styles.css">
</head>
<body>
    <h2>Lista de Reparaciones</h2>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Equipo</th>
                <th>Solicitud</th>
                <th>Técnico Asignado</th>
                <th>Estado</th>
                <th>Fecha Reporte</th>
                <th>Fecha Finalización</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% reparaciones.forEach(reparacion => { %>
                <tr>
                    <td><%= reparacion.id_reparacion %></td>
                    <td><%= reparacion.equipo %></td>
                    <td><%= reparacion.solicitud %></td>
                    <td><%= reparacion.tecnico %></td>
                    <td><%= reparacion.estado %></td>
                    <td><%= reparacion.fecha_reporte %></td>
                    <td><%= reparacion.fecha_finalizacion || 'Pendiente' %></td>
                    <td>
                        <form action="/reparaciones/actualizar-estado" method="POST">
                            <input type="hidden" name="id_reparacion" value="<%= reparacion.id_reparacion %>">
                            <select name="nuevo_estado" required>
                                <option value="En progreso">En progreso</option>
                                <option value="Reparado">Reparado</option>
                                <option value="Descartado">Descartado</option>
                            </select>
                            <button type="submit">Actualizar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/reparaciones/crear">Registrar Nueva Reparación</a>
</body>
</html>
