<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Facturas</title>
</head>
<body>
    <h1>Listado de Facturas</h1>
    <table>
        <thead>
            <tr>
                <th>ID Cliente</th>
                <th>ID Empleado</th>
                <th>Fecha Emisi√≥n</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% facturas.forEach(factura => { %>
                <tr>
                    <td><%= factura.id_cliente %></td>
                    <td><%= factura.id_empleado %></td>
                    <td><%= factura.fecha_emision %></td>
                    <td><%= factura.total %></td>
                    <td><%= factura.estado %></td>
                    <td>
                        <a href="/facturas/edit/<%= factura.id_factura %>">Editar</a>
                        <a href="/facturas/delete/<%= factura.id_factura %>">Eliminar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/facturas/create">Crear nueva factura</a>
</body>
</html>
